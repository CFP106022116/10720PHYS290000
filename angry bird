   "source": [
    "import random\n",
    "import math\n",
    "import matplotlib.pyplot as plt\n",
    "import numpy as np\n",
    "\n",
    "pigx = (random.randint(1,40))\n",
    "pigy = (random.randint(1,10))\n",
    "\n",
    "V = 20 ;\n",
    "angle = 45;\n",
    "g = -9.8\n",
    "\n",
    "Vx = V * math.cos(angle*math.pi/180) ;   #水平速度\n",
    "Vy = V * math.sin(angle*math.pi/180) ;   #垂直速度\n",
    "\n",
    "t = np.arange( 0 , -2*Vy/g , 0.01 )\n",
    "Xx = t * Vx ;\n",
    "Xy = Vy * t + 0.5 * g * t * t ;\n",
    "plt.plot(Xx,Xy)\n",
    "\n",
    "plt.plot(pigx,pigy,\"o\") \n",
    "\n",
    "print(pigx,pigy)"
   ]
  }
